[Unit]
Description="Dummy listener for load balancer health check"
Requires=network-online.target
After=network-online.target
StartLimitIntervalSec=30
StartLimitBurst=20

[Service]
User=root
Group=root
ExecStart=/usr/bin/netcat -k -l 0.0.0.0 1337
KillMode=process
Restart=on-failure
RestartSec=1

[Install]
WantedBy=multi-user.target